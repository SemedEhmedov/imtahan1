@model List<User>
@{
    int count = 0;
}
<div class="container">
    <table class="table">
        <a class="btn btn-primary" asp-action="Create">Create</a>
        <thead class="thead-light">
            <tr>
                <th scope="col">#</th>
                <th scope="col">FullName</th>
                <th scope="col">Description</th>
                <th scope="col">WebSite</th>
                <th scope="col">Image</th>

            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model)
            {
                count++;
            <tr>
                <th scope="row">@count</th>
                <td>@item.FullName</td>
                <td>@item.Descriptrion</td>
                <td>@item.WebSite.Name</td>
                <td>
                        @if (!string.IsNullOrEmpty(item.ImgUrl))
                        {
                            <img src="~/Upload/User/@item.ImgUrl" alt="..." height="100" width="100" class="img-thumbnail">
                        }
                        else
                        {
                            <span>No Photo</span>
                        }
                    </td>
                    <td>
                        <a class="btn btn-secondary" asp-route-id="@item.Id" asp-action="Update">Update</a>
                        <a class="btn btn-danger" asp-route-id="@item.Id" asp-action="Delete">Delete</a>
                    </td>

            </tr>
                
            }
        </tbody>
    </table>
</div>

